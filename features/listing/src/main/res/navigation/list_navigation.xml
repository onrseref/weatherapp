<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_navigation"
    app:startDestination="@id/fragment_navigation_list">

    <include app:graph="@navigation/detail_navigation" />

    <fragment
        android:id="@+id/fragment_navigation_list"
        android:name="com.btcturk.listing.ListingFragment"
        app:launchSingleTop="true">

        <action
            android:id="@+id/list_to_detail"
            app:destination="@id/detail_navigation">

            <argument
                android:name="pair"
                app:argType="string"
                app:nullable="true" />
            <argument
                android:name="to"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>
</navigation>