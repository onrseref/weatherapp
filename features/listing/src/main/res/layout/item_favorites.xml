<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginEnd="@dimen/dp16"
    android:background="@color/light_black"
    android:paddingHorizontal="@dimen/dp8"
    android:paddingVertical="@dimen/dp8">

    <TextView
        android:id="@+id/tv_pair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp2"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_last"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pair Name" />

    <TextView
        android:id="@+id/tv_last"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp2"
        android:gravity="end"
        android:lines="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_daily_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pair"
        tools:text="Last" />

    <TextView
        android:id="@+id/tv_daily_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp2"
        android:gravity="end"
        android:lines="1"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_last"
        tools:text="Daily Percent" />

</androidx.constraintlayout.widget.ConstraintLayout>